[user]
	name = ferantivero
	email = v-fean@microsoft.com
[alias]
	k = log --graph --decorate --oneline --all
    r = log -g --abbrev-commit --pretty=oneline #reflog show
    b = branch -a -v
    br = branch -m
    co = checkout
    ca = commit --amend
	a = add
	c = commit -m
	f = fetch
	d = difftool
	s = status
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = vim
	autocrlf = false
	filemode = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
